{
    "name": "sprite-kit",
    "version": "1.0.0",
    "description": "GitHub Actions for Sprite-backed persistent CI steps",
    "type": "module",
    "scripts": {
        "build": "npm run build:init && npm run build:run && npm run build:clean",
        "build:init": "esbuild src/init/index.ts --bundle --platform=node --target=node20 --outfile=init/dist/index.js --sourcemap",
        "build:run": "esbuild src/run/index.ts --bundle --platform=node --target=node20 --outfile=run/dist/index.js --sourcemap",
        "build:clean": "esbuild src/clean/index.ts --bundle --platform=node --target=node20 --outfile=clean/dist/index.js --sourcemap",
        "lint": "eslint . --ext .ts",
        "typecheck": "tsc --noEmit",
        "test": "jest",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@actions/core": "^1.10.1",
        "@actions/github": "^6.0.0",
        "@fly/sprites": "*",
        "ws": "^8.16.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.6",
        "@types/ws": "^8.5.10",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "@vercel/ncc": "^0.38.1",
        "esbuild": "^0.21.5",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=20"
    }
}