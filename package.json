{
    "name": "sprite-kit",
    "version": "1.0.0",
    "description": "GitHub Actions for Sprite-backed persistent CI steps",
    "private": true,
    "workspaces": [
        "common",
        "init",
        "run"
    ],
    "scripts": {
        "build": "npm run build --workspaces --if-present",
        "build:init": "npm run build -w init",
        "build:run": "npm run build -w run",
        "lint": "eslint . --ext .ts",
        "typecheck": "tsc --noEmit",
        "test": "jest",
        "clean": "rm -rf common/dist init/dist run/dist"
    },
    "devDependencies": {
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.6",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "@vercel/ncc": "^0.38.1",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=20"
    }
}